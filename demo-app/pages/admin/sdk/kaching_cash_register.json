            }
          }
        ]
      }
    },
    {
      "name": "CreateCashRegisterArgs",
      "type": {
        "kind": "struct",
        "fields": [
          {
            "name": "cashRegisterId",
            "type": "string"
          },
          {
            "name": "orderSignersWhitelist",
            "type": {
              "vec": "publicKey"
            }
          },
          {
            "name": "consumedOrdersInitKNum",
            "type": "u32"
          },
          {
            "name": "consumedOrdersInitBitmapBitsNum",
            "type": "u64"
          },
          {
            "name": "consumedOrdersInitSipKeys",
            "type": {
              "array": [
                "u64",
                4
              ]
            }
          }
        ]
      }
    },
